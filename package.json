{
  "name": "vcl",
  "version": "0.1.0",
  "description": "Vibe Coding Language compiler and tooling",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p .",
    "dev": "ts-node src/repl.ts",
    "lint": "eslint .",
    "lint:vcl": "node dist/cli/index.js lint",
    "format:vcl": "node dist/cli/index.js format",
    "test": "vitest",
    "format": "prettier . --write",
    "demo": "node --loader ts-node/esm scripts/demo-server.ts"
  },
  "bin": {
    "vcl": "dist/cli/index.js"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "chalk": "^5.6.2",
    "chevrotain": "^10.5.0",
    "commander": "^14.0.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  }
}
